{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"semi": 2,
		"react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "react-native/no-color-literals": 1
	},
  "plugins": [
    "react",
		"react-native"
  ],
	"extends": [
		"eslint:recommended", 
		"plugin:react/recommended"
	]
}